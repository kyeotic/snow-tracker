{
  "tasks": {
    "start": "deno run -A --watch=src/ src/dev.ts",
    "check": "deno check ./src/main.ts",
    "test": "deno test",
    "lint": "deno lint",
    "format": "deno fmt",
    "prepare": "deno run --allow-read --allow-write --allow-env src/cli.ts prepare",
    "env-example": "sed 's/=.*/=/' .env > .env.example"
  },
  "importMap": "import_map.json",
  "compilerOptions": {
    "lib": ["deno.ns", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "files": {
      "include": ["app/", "worker"]
    },
    "options": {
      "semiColons": false,
      "singleQuote": true
    }
  },
  "lint": {
    "files": {
      "include": ["app/", "worker"]
    }
  }
}
