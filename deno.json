{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env --allow-run --allow-write src/main.ts",
    "dev": "deno run --import-map import_map_dev.json --allow-net --allow-read --allow-env --allow-run --allow-write src/dev.ts",
    "test": "deno test --import-map import_map_test.json",
    "check": "deno check ./src/main.ts",
    "lint": "deno lint",
    "format": "deno fmt",
    "prepare": "deno run --allow-read --allow-write --allow-env src/cli.ts prepare"
  },
  "importMap": "import_map.json",
  "compilerOptions": {
    "lib": ["deno.ns", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "fmt": {
    "files": {
      "include": ["app/", "worker"]
    },
    "options": {
      "semiColons": false,
      "singleQuote": true
    }
  },
  "lint": {
    "files": {
      "include": ["app/", "worker"]
    }
  }
}
